{
    "main": {
        "base": "/Users/eirik.refsdal/prototype",
        "dest": "build"
    },

    "gulp": {
        "loadPlugins": {
            "pattern": ["gulp-*",
                        "gulp.",
                        "debug",
                        "del",
                        "nano",
                        "metalsmith-*"]
        }
    },

    "metalsmith": {
        "engine":    "swig",
        "src":       "src/html/pages/**/*",
        "templates": "src/html/templates"
    },
    "sass": {
        "src":  "src/scss/*.scss",
        "dest": "/css",
        "opts": {
            "includePaths": ["./node_modules",
                             "/Users/eirik.refsdal/github/other/bootstrap/scss"],
            "sourceMap": true,
            "omitSourceMapUrl": true,
            "outFile": "./build/css/site.map"
        }
    },
    "assets": {
        "images": {
            "dest": "/img",
            "src": ["src/img/**/*"]
        },
        "fonts": {
            "dest": "/fonts",
            "src": ["src/fonts/**/*"]
        },
        "css": {
            "dest": "/css",
            "src": []
        },
        "favicon": {
            "dest": "",
            "src": ["src/favicon/**/*"]
        },
        "js": {
            "dest": "/js",
            "src": ["src/js/**/*",
                    "node_modules/jquery/dist/**/*",
                    "node_modules/instafeed.js/instafeed.min.js",
                    "node_modules/isotope-layout/dist/**/*",
                    "node_modules/isotope-packery/**/*.js"
                   ]
        }
    }
}
